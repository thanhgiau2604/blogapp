<html>
    <head>
        <title>Dashboard</title>
        <%- include layout/head%>
    </head>
    <body>
        <%- include layout/nav%>
        <!-- DataTales Example -->
        <div class="container">
        <div class="row" style="padding-bottom: 20dp">
          <div class="col-md-12">
              <a href="/admin/post/new" class="btn btn-success pull-right">Add New Post</a>
          </div>          
        </div>
        <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Title</th>
                          <th>Content</th>
                          <th>Author</th>
                          <th>Create Time</th>
                          <th>Update Time</th>
                          <th>Action</th>
                        </tr>
                    </thead>
                      <tbody>
                        <% if (data && data.posts) {%>
                          <% for (var i=0; i< data.posts.length; i++) {%>
                            <tr>
                              <td><%=data.posts[i].id%></td>
                              <td><%=data.posts[i].title%></td>
                              <td><%=data.posts[i].content%></td>
                              <td><%=data.posts[i].author%></td>
                              <td><%=data.posts[i].created_at%></td>
                              <td><%=data.posts[i].updated_at%></td>
                              <td>
                                <a href="/admin/post/edit/<%=data.posts[i].id%>" class="btn btn-primary">Edit</a>
                                <button class="btn btn-warning post_delete" post_id="<%=data.posts[i].id%>">Delete</button>
                              </td>
                            </tr>
                          <%}%>
                          <%}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <script src="/static/js/post.js"></script> 
    </body>
</html>